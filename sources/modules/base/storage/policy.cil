(block storage
	(typeattribute unconfined_subj_type_attribute)

	(typeattribute read_fixed_disk_subj_type_attribute)
	(typeattribute not_read_fixed_disk_subj_type_or_unconfined_subj_type_attribute)

	(typeattributeset not_read_fixed_disk_subj_type_or_unconfined_subj_type_attribute
		(not (read_fixed_disk_subj_type_attribute unconfined_subj_type_attribute)))

	(neverallow not_read_fixed_disk_subj_type_or_unconfined_subj_type_attribute
		fixed_disk.storage_dev (chr_file (read)))
	(neverallow not_read_fixed_disk_subj_type_or_unconfined_subj_type_attribute
		fixed_disk.storage_dev (blk_file (read)))

	(typeattribute write_fixed_disk_subj_type_attribute)
	(typeattribute not_write_fixed_disk_subj_type_or_unconfined_subj_type_attribute)

	(typeattributeset not_write_fixed_disk_subj_type_or_unconfined_subj_type_attribute
		(not (write_fixed_disk_subj_type_attribute unconfined_subj_type_attribute)))

	(neverallow not_write_fixed_disk_subj_type_or_unconfined_subj_type_attribute
		fixed_disk.storage_dev (chr_file (append write)))
	(neverallow not_write_fixed_disk_subj_type_or_unconfined_subj_type_attribute
		fixed_disk.storage_dev (blk_file (append write)))

	(typeattribute read_scsi_generic_subj_type_attribute)
	(typeattribute not_read_scsi_generic_subj_type_or_unconfined_subj_type_attribute)

	(typeattributeset not_read_scsi_generic_subj_type_or_unconfined_subj_type_attribute
		(not (read_scsi_generic_subj_type_attribute unconfined_subj_type_attribute)))

	(neverallow not_read_scsi_generic_subj_type_or_unconfined_subj_type_attribute
		scsi_generic.storage_dev (chr_file (read)))

	(typeattribute write_scsi_generic_subj_type_attribute)
	(typeattribute not_write_scsi_generic_subj_type_or_unconfined_subj_type_attribute)

	(typeattributeset not_write_scsi_generic_subj_type_or_unconfined_subj_type_attribute
		(not (write_scsi_generic_subj_type_attribute unconfined_subj_type_attribute)))

	(neverallow not_write_scsi_generic_subj_type_or_unconfined_subj_type_attribute
		scsi_generic.storage_dev (chr_file (append write)))

	(allow unconfined_subj_type_attribute fixed_disk.storage_dev all_chr_file_perms_except_mounton_and_execmod)
	(allow unconfined_subj_type_attribute fixed_disk.storage_dev all_blk_file_perms_except_mounton_and_execmod)

	(allow unconfined_subj_type_attribute fuse_storage.storage_dev all_chr_file_perms_except_mounton_and_execmod)

	(allow unconfined_subj_type_attribute removable_storage.storage_dev all_blk_file_perms_except_mounton_and_execmod)

	(allow unconfined_subj_type_attribute scsi_generic.storage_dev all_chr_file_perms_except_mounton_and_execmod))

(block fixed_disk
	(blockinherit dev.storage_obj_blk))

(block fuse_storage
	(blockinherit dev.storage_obj_blk))

(block removable_storage
	(blockinherit dev.storage_obj_blk))

(block scsi_generic
	(blockinherit dev.storage_obj_blk))
